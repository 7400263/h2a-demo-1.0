    <name>HCCP Application (template)</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <maven.plugin.version.jar>3.3.0</maven.plugin.version.jar>
        <maven.build.timestamp.format>yyyyMMdd-HHmmssSSS</maven.build.timestamp.format>

        <!-- properties for platform dependencies version-->
        <version.spring>5.3.24</version.spring>
        <version.slf4j>1.7.36</version.slf4j>
        <version.commons-lang3>3.5</version.commons-lang3>
        <version.commons-io>2.4</version.commons-io>
        <version.commons-fileupload>1.3.2</version.commons-fileupload>
        <version.commons-codec>1.9</version.commons-codec>
        <version.commons-pool2>2.6.1</version.commons-pool2>
        <version.disruptor>3.4.2</version.disruptor>
        <version.netty>4.1.85.Final</version.netty>
        <version.lettuce>6.2.2.RELEASE</version.lettuce>
        <version.jetcd>0.5.11</version.jetcd>
        <version.guava>31.1-jre</version.guava>
        <version.log4j>2.17.2</version.log4j>
        <version.protobuf>3.17.2</version.protobuf>
        <version.caffeine>2.9.3</version.caffeine>
        <version.druid>1.0.26</version.druid>
        <version.jackson>2.13.4</version.jackson>
        <version.mysql>5.1.46</version.mysql>
    </properties>

